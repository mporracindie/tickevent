generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model Tenant {
  id        String   @id @default(uuid())
  name      String
  slug      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  users  UserTenant[]
  events Event[]
}

model User {
  id           String    @id @default(uuid())
  email        String    @unique
  passwordHash String?
  name         String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  userTenants UserTenant[]
  events      Event[]    @relation("EventCreator")
  sales       Sale[]
}

model UserTenant {
  userId   String
  tenantId String
  role     Role
  user     User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  tenant   Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@id([userId, tenantId])
}

enum Role {
  ADMIN
  ORGANIZER
  SELLER
  VERIFIER
  GUEST
}

model Event {
  id          String    @id @default(uuid())
  name        String
  description String?
  date        DateTime
  venue       String
  imageUrl    String?
  isPublished Boolean   @default(false)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  tenantId    String
  tenant      Tenant    @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  creatorId   String?
  creator     User?     @relation("EventCreator", fields: [creatorId], references: [id])

  ticketTypes TicketType[]
  sales       Sale[]
}

model TicketType {
  id          String   @id @default(uuid())
  name        String
  description String?
  price       Float
  quantity    Int
  sold        Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  eventId String
  event   Event   @relation(fields: [eventId], references: [id], onDelete: Cascade)

  tickets Ticket[]
}

model Ticket {
  id         String        @id @default(uuid())
  code       String        @unique
  status     TicketStatus  @default(VALID)
  checkedAt  DateTime?
  checkedBy  String?       // userId de quien verific√≥
  createdAt  DateTime      @default(now())

  ticketTypeId String
  ticketType   TicketType  @relation(fields: [ticketTypeId], references: [id], onDelete: Cascade)

  saleId String?
  sale   Sale?   @relation(fields: [saleId], references: [id])
}

enum TicketStatus {
  VALID
  USED
  CANCELLED
  REFUNDED
}

model Sale {
  id                String     @id @default(uuid())
  total             Float
  status            SaleStatus @default(PENDING)
  customerEmail     String?
  customerName      String?
  paymentReference  String?
  guestToken        String?    // token para guest checkout
  createdAt         DateTime   @default(now())
  updatedAt         DateTime   @updatedAt

  eventId  String
  event    Event  @relation(fields: [eventId], references: [id])
  sellerId String?
  seller   User?  @relation(fields: [sellerId], references: [id])

  tickets Ticket[]
}

enum SaleStatus {
  PENDING
  COMPLETED
  CANCELLED
  REFUNDED
}